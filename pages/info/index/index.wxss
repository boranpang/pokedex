.infolist {
  width: 100%;
  background-color: #fff;
  margin-top: 40rpx;
}

.m-info {
  box-sizing: border-box;
  display: block;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
  color: #000;
  margin-left: 32rpx;
  padding-right: 32rpx;
  border-top: 1rpx solid #e5e5e5;
}

.m-info:first-child {
  border-top: 0rpx;
}

.m-info .m-chevron {
  float: right;
  margin-left: 30rpx;
}

.m-info .m-chevron .chevron {
  width: 16rpx;
  height: 26rpx;
  vertical-align: middle;
}

.m-info .tag {
  font-size: 20rpx;
  color: #fff;
  background-color: #dc4343;
  vertical-align: middle;
  padding-left: 8rpx;
  padding-right: 8rpx;
  padding-top: 2rpx;
  padding-bottom: 2rpx;
  margin-left: 8rpx;
}
