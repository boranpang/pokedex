/**index.wxss**/

.container {
  padding-bottom: 40rpx;
}

.m-move {
  display: block;
  width: 100%;
  margin-top: 40rpx;
  background-color: #fff;
}

.m-move .m-info {
  box-sizing: border-box;
  display: block;
  /* width: 100%; */
  height: 88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
  color: #888;
  /* padding: 0 32rpx; */
  background-color: #fff;
  margin-left: 32rpx;
  padding-right: 32rpx;
  /* border-top: 1rpx solid #e5e5e5; */
  border-bottom: 1rpx solid #e5e5e5;
}

.m-move .m-numbers {
  box-sizing: border-box;
  display: flex;
  width: 100%;
  height: 128rpx;
  line-height: 60rpx;
  font-size: 32rpx;
  color: #888;
  background-color: #fff;
  /* margin-top: 40rpx; *//* border-top: 1rpx solid #e5e5e5; *//* border-bottom: 1rpx solid #e5e5e5; */
}

.m-move .m-numbers .m-number {
  flex: 1;
  padding-left: 32rpx;
  position: relative;
}

.m-move .m-numbers .m-pp {
  flex: 0.8;
  padding-left: 24rpx;
}

.m-move .m-numbers .m-prior {
  flex: 0.8;
  padding-left: 24rpx;
}

.m-move .m-numbers .m-z {
  flex: 1.4;
  padding-left: 42rpx;
}

.m-move .m-numbers .m-number .line {
  display: block;
  position: absolute;
  left: 0;
  top: 50%;
  margin-top: -10rpx;
  height: 20rpx;
  width: 2rpx;
  background-color: #e5e5e5;
}

.m-move .m-numbers .m-number text {
  display: block;
  width: 100%;
  height: 60rpx;
}

.m-move .m-numbers .m-number .title {
  font-size: 24rpx;
  line-height: 80rpx;
}

.m-move .m-numbers .m-number .value {
  color: #353535;
  font-size: 32rpx;
  line-height: 50rpx;
}

.m-move .m-info .name {
  color: #000;
  /* line-height: 50rpx; */
}

.m-move .m-info .tmpic {
  display: inline-block;
  vertical-align: middle;
  height: 38rpx;
  width: 38rpx;
  margin-left: 20rpx;
}

.m-move .m-info .tm {
  color: #888;
  font-size: 24rpx;
  margin-left: 12rpx;
}

.m-move .m-info .types {
  float: right;
}

.m-move .m-info .types .m-type {
  margin-left: 32rpx;
}

.m-move .m-info .movetypes {
  float: right;
}

.m-move .m-info .movetypes .m-movetype {
  margin-left: 20rpx;
}

.ctntitle {
  display: block;
  width: 100%;
  font-size: 28rpx;
  text-align: left;
  padding: 30rpx 30rpx 16rpx 30rpx;
  box-sizing: border-box;
  color: #888;
}

.ctntitle .red {
  display: inline;
  color: #dc4343;
}

.ctn {
  background-color: #fff;
  width: 100%;
  line-height: 48rpx;
  font-size: 32rpx;
  color: #000;
  box-sizing: border-box;
}

.effect {
  box-sizing: border-box;
  padding: 30rpx 30rpx 24rpx 30rpx;
}

.sprite {
  display: block;
  margin: 0 32rpx;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
  color: #353535;
  border-bottom: 1rpx solid #e5e5e5;
  box-sizing: border-box;
}

.sprite .name {
  margin-left: 20rpx;
}

.sprite .types {
  float: right;
}

.sprite .types .m-type {
  margin-left: 20rpx;
}

.ctn .sprite:last-child {
  border-bottom: 0;
}
